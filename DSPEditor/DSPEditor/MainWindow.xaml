                    <Image Source="mute.png" Height="25" Width="29" RenderTransformOrigin="0.219,0.491" IsHitTestVisible="False">

                    </Image>
                </Button>
            </WrapPanel>
            <WrapPanel Grid.Row = "1" VerticalAlignment="Top" Height="35" Margin="10,9.717,0.34,-0.34">
                <Slider VerticalAlignment="Center" Maximum="1" Width="210" BorderBrush="#FF00FF18" Margin="10,12,0,0" Foreground="#FFFFF101" ValueChanged="SoundVolumeChanged" />
            </WrapPanel>
        </Grid>
        <Grid
              Grid.Column="0" Margin="0,18,0.453,179.962" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
