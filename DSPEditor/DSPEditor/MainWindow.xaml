<Window x:Class="DSPEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSPEditor"
        xmlns:svl="clr-namespace:WPFSoundVisualizationLib;assembly=WPFSoundVisualizationLib"
        mc:Ignorable="d"
        Title="DSPEditor" Height="450" Width="800" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="CanMinimize" Icon="DSPEditor.png" FontFamily="Rockwell" BorderBrush="Black" FontSize="12">
    <Grid Background="#FF3F3F46" Opacity="0.95">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>
        <Menu DockPanel.Dock="Top" Background="#FFF0F0F0" FontSize="12" Grid.Row="0"
              Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="_Load"/>
                <MenuItem Header="_Export">
                    <MenuItem Header="_MP3 File"/>
                    <MenuItem Header="_WAV File"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Effect">
                <MenuItem Header="_Modulation effects">
                    <MenuItem Header="_Flanger"/>
                    <MenuItem Header="_Ring modulation"/>
                    <MenuItem Header="_Tremolo"/>
                    <MenuItem Header="_Flanger"/>
                    <MenuItem Header="_Chorus"/>
                </MenuItem>
                <MenuItem Header="_Dynamic effects">
                    <MenuItem Header="_Fuzz"/>
                </MenuItem>
                <MenuItem Header="_Time-based effects">
                    <MenuItem Header="_Echo"/>
                    <MenuItem Header="_Reverb"/>
                    <MenuItem Header="_Delay"/>
                </MenuItem>
                <MenuItem Header="_Customm">
                    <MenuItem Header="_Wah-wah"/>
                    <MenuItem Header="_Vibrato"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Generate">
                <MenuItem Header="_Noise"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1"
              Margin="278.547,4.887,5.264,4.736" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height = "*" />
                <RowDefinition Height = "*" />
            </Grid.RowDefinitions>
            <WrapPanel Grid.Row = "0" VerticalAlignment="Top" Height="70" Margin="10,10,0.34,0" Grid.RowSpan="2">
                <Button Name="PlayButton"
                        VerticalAlignment="Top"
                        Width="50"
                        Height="24"
                        Margin="2"
                        IsEnabled="False"
                        Content="Play" />
                <Button Name="PauseButton"
                        VerticalAlignment="Top"
                        Width="50"
                        Height="24"
                        Margin="2"
                        IsEnabled="False"
                        Content="Pause" />
                <Button Name="StopButton"
                        VerticalAlignment="Top"
                        Width="50"
                        Height="24"
                        Margin="2"
                        IsEnabled="False"
                        Content="Stop" />
                <Button Name="MuteButton"
                        VerticalAlignment="Top"
                        Width="50"
                        Height="24"
                        Margin="2"
                        IsEnabled="False"
                        Content="Mute" />
            </WrapPanel>
            <WrapPanel Grid.Row = "1" VerticalAlignment="Top" Height="35" Margin="10,9.717,0.34,-0.34">
                <Slider VerticalAlignment="Center" Maximum="100" Width="219" BorderBrush="#FF00FF18" />
            </WrapPanel>
        </Grid>
        <svl:DigitalClock Grid.Row="1"
                          Grid.ColumnSpan="2"
                          x:Name="clockDisplay"
                          ShowHours="False"
                          ShowSubSeconds="True"
                          HorizontalAlignment="Center"
                          Margin="5" Background="Black" />
        <Grid Grid.Row="2"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <svl:WaveformTimeline x:Name="waveformTimeline"
                                  Margin="5"
                                  BorderThickness="1" />
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center"
                        Grid.Column="1">
                <svl:TimeEditor Margin="5"
                                Name="repeatStartTimeEdit"
                                IsReadOnly="True" />
                <svl:TimeEditor Margin="5"
                                Name="repeatStopTimeEdit"
                                IsReadOnly="True" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
